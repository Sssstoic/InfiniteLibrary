<!-- Index.razor -->
@page "/"
@inherits LayoutComponentBase

<div class="main-container">
    <div class="header">
        <!-- Logo and Library Name -->
        <div class="logo-container">
            <img src="Images/logo.jpg" alt="Logo Image" class="logo-img" />
            <h1 class="library-name">Infinite Library</h1>
        </div>
    </div>

    <div class="middle">
        <!-- Left Section: Library Management System, Slogan, and Image -->
        <div class="left-section">
            <h4>Library Management System</h4>
            <h4>By: James Tuling</h4>
            <h4>Prince Martinez</h4>
            <div class="slogan">
                <p><i>"Unlock Knowledge,</i></p>
                <p><i>Explore Boundless Worlds"</i></p>
            </div>
        </div>
        <!-- Right Section: Images -->
        <div class="right-section">
            <img src="images/book1.jpg" alt="Image 1" class="image1" />
            <img src="images/book2.jpg" alt="Image 2" class="image2" />
        </div>
    </div>
    <!-- Buttons Section -->
    <div class="buttons">
        <button class="librarian-btn" onclick="location.href='counter'">Librarian</button>
        <button class="patron-btn">Patron</button>
    </div>
</div>

<style>
    /* Styles.css */

    body {
        background-color: #081E3E;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .main-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        color: #fff;
        font-size: larger;
        padding: 20px;
    }

    .header {
        width: 100%;
        text-align: center;
        padding-bottom: 20px;
    }

    .logo-container {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
    }

    .logo-img {
        width: 100px;
        height: auto;
        margin-right: 20px;
    }

    .library-name {
        font-size: 36px;
        font-weight: bold;
    }

    .middle {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        margin-bottom: 40px;
    }

    .left-section {
        margin-right: 40px;
    }

    .slogan {
        margin-top: 20px;
    }

    .right-section {
        display: flex;
        align-items: center;
    }

    .image1,
    .image2 {
        width: 200px;
        height: auto;
        margin-right: -30px;
        position: relative;
        z-index: 1;
    }

    .image1 {
        margin-top: -30px;
    }

    .buttons {
        display: flex;
        margin-top: 40px;
    }

    .librarian-btn,
    .patron-btn {
        padding: 15px 25px;
        margin-right: 20px;
        font-size: 18px;
        cursor: pointer;
        border: none;
        border-radius: 5px;
        color: #081E3E;
        background-color: #fff;
    }

        .librarian-btn:hover,
        .patron-btn:hover {
            background-color: #ddd;
        }

</style>
